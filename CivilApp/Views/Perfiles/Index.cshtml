@model IEnumerable<CivilApp.Perfil>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<br />
<!-- Build page from here: Usual with <div class="row-fluid"></div> -->
   
      
                <div class="pull-right">
                    <a type="button" class="btn btn-success" href="@Url.Action("Nuevo", "Perfiles")">
                        Nuevo Perfil
                    </a>
                </div>
     <br /><br />
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default gradient">
                    <div class="panel-heading">
                        <h4>
                            <span>Perfiles</span>


                        </h4>
                    </div>

                    <div class="panel-body noPad clearfix">

                        <table border="0" class="dynamicTable display table table-bordered" width="100">
                            <thead>
                                <tr>
                                    <th>Descripción</th>
                                    <th>Usuarios</th>
                                    <th># dePaginas</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td>@item.Descripcion</td>
                                        <td>@item.Usuarios.Count</td>
                                        <td>@item.PerfilPagina.Count</td>
                                        <td>
                                            <div class="btn-group">
                                                <a type="button" class="btn btn-info btn-xs" href="@Url.Action("Detalle", "Perfiles", new { id = item.PerfilID })"><i class="icon16 icomoon-icon-eye white"></i></a>
                                                <a type="button" class="btn btn-primary btn-xs" href="@Url.Action("Editar", "Perfiles", new { id = item.PerfilID })"><i class="icon16 icomoon-icon-pencil white"></i></a>
                                                <a type="button" class="btn btn-danger btn-xs" href="@Url.Action("Borrar", "Perfiles", new { id = item.PerfilID })"><i class="icon16 brocco-icon-trashcan white"></i></a>
                                            </div><!-- End .span4 -->
                                        </td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Descripción</th>
                                    <th align="center">Usuarios</th>
                                    <th align="center"># dePaginas</th>
                                    <th align="center">Acciones</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div><!-- End .panel -->
            </div><!-- End .span12 -->
        </div><!-- End .row -->
