@model CivilApp.Niveles
@using CivilApp
@{
    ViewBag.Title = "Nuevo";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<br />
<!-- Build page from here: Usual with <div class="row-fluid"></div> -->

<br /><br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default gradient">
            <div class="panel-heading">
                <h4>
                    <span>Nivel</span>
                </h4>
            </div>

            <div class="panel-body noPad clearfix">
                <form class="form-horizontal" action="Nuevo" method="post" role="form">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <br />
                    <div class="form-group">
                        <label class="col-lg-2 control-label" for="normalInput">Descripcion Nivel</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", required = "required", type = "text" })
                            @*<input type="text" name="Descripcion" id="Descripcion" class="form-control" required>*@
                        </div>
                    </div><!-- End .form-group  -->
                    <div class="form-group">
                        <div class="col-lg-offset-3 col-lg-9">
                            <button type="submit" class="btn btn-info">Guardar</button>
                            <a type="button" href="@Url.Action("Index", "Niveles")" class="btn btn-default">Cancelar</a>
                        </div>
                    </div><!-- End .form-group  -->
                </form>
            </div>
        </div><!-- End .panel -->
    </div><!-- End .span12 -->
</div><!-- End .row -->

