@model CivilApp.Niveles
@using CivilApp
@{
    ViewBag.Title = "Detalle";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<br />
<!-- Build page from here: Usual with <div class="row-fluid"></div> -->

<br /><br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default gradient">
            <div class="panel-heading">
                <h4>
                    <span>Nivel</span>
                </h4>
            </div>

            <div class="panel-body noPad clearfix">
                <form class="form-horizontal" role="form">           
                    <br />
                    <div class="form-group">
                        <label class="col-lg-2 control-label" for="normalInput">Descripcion Nivel</label>
                        <div class="col-lg-9">
                    
                            <input type="text" name="Descripcion" id="Descripcion" class="form-control" disabled>
                        </div>
                    </div><!-- End .form-group  -->
                    <div class="form-group">
                        <div class="col-lg-offset-3 col-lg-9">
                            <a type="button" href="@Url.Action("Index", "Niveles")" class="btn btn-info"><i class="icon16 icomoon-icon-backspace white"></i> Volver</a>
                            <a type="button" href="@Url.Action("Editar", "Niveles", new { id = Model.NivelID})" class="btn btn-success"><i class="icon16 icomoon-icon-pencil white"></i> Editar</a>
                        </div>
                    </div><!-- End .form-group  -->
                </form>
            </div>
        </div><!-- End .panel -->
    </div><!-- End .span12 -->
</div><!-- End .row -->